!!! 5
%html
  %head
    %title= @page_title

    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    = csrf_meta_tags

    %link{rel: 'shortcut icon', href: '/favicon.ico'}

    = stylesheet_link_tag 'application', media: 'all'
    = yield :stylesheet

  %body{body_attrs}
    = yield(:main_content) || yield

    .modal-dialog

    = javascript_include_tag 'application'
    = yield :javascript
